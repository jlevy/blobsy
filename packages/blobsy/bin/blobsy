#!/bin/sh
# Resolve symlinks to find actual package root
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd -P)"
REAL_SCRIPT="$(readlink "$0" 2>/dev/null || echo "$0")"
if [ "$REAL_SCRIPT" != "$0" ]; then
  # Resolve relative symlink
  SCRIPT_DIR="$(cd "$(dirname "$0")" && cd "$(dirname "$REAL_SCRIPT")" && pwd -P)"
fi
PACKAGE_ROOT="$(dirname "$SCRIPT_DIR")"
exec node "$PACKAGE_ROOT/dist/cli.mjs" "$@"
